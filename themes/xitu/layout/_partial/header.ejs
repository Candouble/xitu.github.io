<header id="header">
  <div class="meny" style="display: none">
    <% if (site.tags.length){ %>
          <h3 class="meny-title"><%= __('tagcloud') %></h3>
          <div class="meny-tag-box">
            <%- tagcloud({
              min_font: 14,
              max_font: 14,
              unit: 'px',
              color: true, 
              start_color: 'rgba(0, 127, 255, 1)', 
              end_color: 'rgba(0, 127, 255, .5)'
            }) %>
          </div>
      <% } %>
  </div>
  <div id="banner"></div>
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner">
      <h1 id="logo-wrap">
        <a href="<%- url_for() %>" id="logo"><%= config.title %></a>
      </h1>
      <% if (theme.subtitle){ %>
        <h2 id="subtitle-wrap">
          <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle %></a>
        </h2>
      <% } %>
      <p style="margin: 3em 0;">
        <iframe src="https://ghbtns.com/github-btn.html?user=xitu&repo=xitu.github.io&type=star&count=true" frameborder="0" scrolling="0" width="90px" height="20px"></iframe>
      </p>
    </div>
    <div id="header-inner" class="inner">
    <nav id="tag-box">
      <a class="main-nav-link" id="tag-arrow"><span>Tags</span></a>
    </nav>
      <nav id="sub-nav">
        <% if (theme.rss){ %>
          <a id="nav-rss-link" class="nav-icon" href="<%- theme.rss %>" title="<%= __('rss_feed') %>"></a>
        <% } %>
        <a id="nav-search-btn" class="nav-icon" title="<%= __('search') %>"></a>
      </nav>
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon"></a>
        <% for (var i in theme.menu){ %>
          <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
      </nav>
      <div id="search-form-wrap">
        <%- search_form({button: '&#xF002;'}) %>
      </div>
    </div>
  </div>
</header>